<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/root" android:tag="layout/activity_app_page_0" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/header" android:background="@color/whiteThree" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/image" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginLeft="48dp" android:scaleType="fitCenter"/>
        <androidx.appcompat.widget.AppCompatTextView android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="48dp" android:minHeight="32dp" android:layout_toRightOf="@+id/image" android:layout_alignTop="@+id/image" style="@style/TextSlateGray.Normal"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:minHeight="32dp" android:layout_toRightOf="@+id/image" android:layout_below="@+id/name">
            <androidx.appcompat.widget.AppCompatTextView android:gravity="center" android:id="@+id/register" android:paddingLeft="8dp" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="32dp" android:maxLines="1" android:drawablePadding="4dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <ImageButton android:id="@+id/install" android:background="@null" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:src="@drawable/btn_install_app_stateful" android:scaleType="center" android:layout_toRightOf="@+id/register" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <include android:id="@+id/toolbar" layout="@layout/toolbar"/>
    <FrameLayout android:id="@+id/content" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/header" android:layout_alignParentBottom="true"/>
    <View android:background="@drawable/drop_shadow" android:layout_width="match_parent" android:layout_height="4dp" android:layout_below="@+id/header"/>
</RelativeLayout>
