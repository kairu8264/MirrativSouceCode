            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView android:textColorLink="@color/whiteThree" android:gravity="start" android:autoLink="web" android:id="@+id/body" android:background="@drawable/rectangle_corner20_tealish" android:paddingLeft="12dp" android:paddingTop="8dp" android:paddingRight="12dp" android:paddingBottom="8dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:layout_weight="1" android:textIsSelectable="true" style="@style/TextWhiteThree.Small"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
